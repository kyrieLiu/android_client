<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_camera_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp" />


    <android.view.SurfaceView
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/txtCurURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
         />
    <TextView
        android:id="@+id/tv_camera_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtCurURL"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        />

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_camera_flag"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_camera_resolution"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/icon_map_search"
            android:src="@mipmap/resolution_select"
            />

        <ImageView
            android:id="@+id/iv_camera_switch"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_camera_switch"
            android:background="@drawable/icon_map_search"
            />
        <ImageView
            android:id="@+id/iv_start_stop"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_above="@+id/txtCurURL"
            android:src="@mipmap/btn_play"
            android:layout_marginTop="25dp"
            android:background="@drawable/icon_map_search"
            />
    </LinearLayout>
     <TextView
            android:id="@+id/tv_camera_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="实时视频"
            android:textColor="@color/mainColorBlue"
            android:layout_marginTop="20dp"
         android:textSize="18sp"
            />
    <ImageView
        android:id="@+id/iv_camera_return"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/icon_return"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        />
</RelativeLayout>