<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_item_friendList_headPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/all_select_gv_home_page_icon"/>
    <TextView
        android:id="@+id/tv_item_friend_list_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="科比"
        android:layout_marginLeft="10dp"
        android:textSize="17sp"
        />
        <com.chinasoft.ctams.view.CircleImageView
            android:id="@+id/iv_item_friendList_flag"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:src="@color/red"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>