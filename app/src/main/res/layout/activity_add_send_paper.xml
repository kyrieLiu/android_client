<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/view_title_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                card_view:cardElevation="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="10dp"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标题："
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                    <EditText
                        android:id="@+id/et_title_send_paper"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="请输入标题"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:background="@drawable/et_rectangle_bg"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="信息类型："/>
                    <Spinner
                        android:id="@+id/sp_message_type_send_paper"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/et_rectangle_bg"
                        android:layout_gravity="center_vertical">
                    </Spinner>
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="报送单位："
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tv_company_send_paper"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@color/divierColor"
                            android:gravity="center_vertical"
                            android:textSize="16sp"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="报送人员："
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tv_send_man_send_paper"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:background="@color/divierColor"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="报送地点："
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>
                        <EditText
                            android:id="@+id/et_send_address_send_paper"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="请输入报送地点"
                            android:gravity="center_vertical"
                            android:background="@drawable/et_rectangle_bg"
                            android:textSize="16sp"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="接收单位："
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>
                        <EditText
                            android:id="@+id/tv_receive_company_send_paper"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="请输入接收单位"
                            android:gravity="center_vertical"
                            android:background="@drawable/et_rectangle_bg"
                            android:textSize="16sp"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_content_send_paper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/et_rectangle_bg"
                        android:minHeight="40dp"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:minLines="5"
                        android:gravity="start"
                        android:padding="4dp"
                        android:hint="请输入报送内容"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:padding="6dp">
                        <Button
                            android:id="@+id/bt_patrol_feedBack_commit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/mainColorBlue"
                            android:textColor="@color/white"
                            android:layout_marginRight="10dp"
                            android:text="提交"/>
                        <Button
                            android:id="@+id/bt_patrol_feedBack_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/mainColorBlue"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="取消"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>