<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.chinasoft.ctams.view.MyGirdView
                android:id="@+id/gv_home_page_funtions"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:horizontalSpacing="1dp"
                android:background="#F0F4F7"
                android:numColumns="4"
                android:divider="@color/divierColor"
                android:dividerHeight="1dp"
                android:scrollbars="none"
                android:verticalSpacing="1dp">
            </com.chinasoft.ctams.view.MyGirdView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divierColor"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="日常安排"
                android:background="@color/dark_main_bg"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                />
           <HorizontalScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#F0F4F7"
               android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/ll_daily_homepage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="4dp"
                    android:orientation="horizontal">
                    <fragment
                        android:id="@+id/fg_leader_homepage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:name="com.chinasoft.ctams.fragment.homePageFragment.schedule.fragments.DailyLeaderFragment"
                        />
                    <fragment
                        android:id="@+id/fg_office_homepage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:name="com.chinasoft.ctams.fragment.homePageFragment.schedule.fragments.DailyOfficeFragment"
                        />
                </LinearLayout>
           </HorizontalScrollView>
        </LinearLayout>

</LinearLayout>