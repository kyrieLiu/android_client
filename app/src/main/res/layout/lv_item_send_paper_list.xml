<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_item_task_type"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:src="@mipmap/type_fire"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_item_send_paper_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:text="2016-02-23"
            />
        <TextView
            android:id="@+id/tv_item_send_paper_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:layout_toLeftOf="@id/tv_item_send_paper_time"
            android:textColor="@color/black"
            android:text="事件标题"
            android:layout_toRightOf="@+id/iv_item_task_type"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:lines="1"/>
        <TextView
            android:id="@+id/tv_item_send_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_item_send_paper_time"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:text="莎车镇"
            android:lines="1"
            />

        <TextView
            android:id="@+id/tv_item_send_paper_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_item_send_paper_title"
            android:layout_below="@+id/tv_item_send_paper_title"
            android:layout_toLeftOf="@+id/tv_item_send_place"
            android:layout_marginTop="12dp"
            android:text="事件内容"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBackgroundGray"
            android:layout_alignParentBottom="true"
            ></View>
    </RelativeLayout>



</LinearLayout>