<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:paddingBottom="3dp"
        >

        <TextView
            android:id="@+id/tv_work_schedule_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="程文华"
            android:textColor="@color/colorGray"
           />

        <TextView
            android:id="@+id/tv_work_schedule_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/tv_work_schedule_name"
            android:layout_alignTop="@+id/tv_work_schedule_name"
            android:text="2016-12-14"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_work_schedule_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="整理员工档案"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tv_work_schedule_name"
            android:layout_alignLeft="@+id/tv_work_schedule_name"
            android:textColor="@color/daily_name_light_blue_homepage" />
    </RelativeLayout>
</LinearLayout>