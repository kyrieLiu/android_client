<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/mainColorBlue"
    android:layout_height="45dp">
        <LinearLayout
            android:id="@+id/ll_titlebar_main_left_layout"
            android:layout_width="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_left_titlebar_main_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@mipmap/title_menu_icon"/>
        </LinearLayout>
    <TextView
        android:id="@+id/tv_title_titlebar_main"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="@string/home_page_titlebar"
        android:layout_centerInParent="true"
        />
    <LinearLayout
        android:id="@+id/ll_titlebar_main_right_layout"
        android:layout_width="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_right_titlebar_main_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_right_titlebar_main_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@mipmap/title_menu_icon"/>
    </LinearLayout>

</RelativeLayout>