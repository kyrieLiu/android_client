<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_statistic_receive_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="类型统计"
            android:textSize="13sp"
            android:background="@drawable/btn_check_gray"
            />
        <Button
            android:id="@+id/bt_statistic_receive_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="日期统计"
            android:textSize="13sp"
            android:background="@drawable/btn_check_gray"
            />
        <Button
            android:id="@+id/bt_statistic_receive_administration"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="行政机构"
            android:textSize="13sp"
            android:background="@drawable/btn_check_gray"
            />
        <Button
            android:id="@+id/bt_statistic_receive_submmit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="报送单位"
            android:textSize="13sp"
            android:background="@drawable/btn_check_gray"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_statistic_receive_information"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        ></LinearLayout>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="详情列表:"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll_orderStatistic_view"
        android:textColor="@android:color/holo_blue_dark"
        />


        <LinearLayout
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
                <TextView
                    android:id="@+id/tv_statistic_type"
                   android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="行政区域"
                    android:textColor="@color/white"
                    />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="信息数量"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.6dip"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorGray"/>
        <ListView
            android:id="@+id/lv_statistic_receive_information"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:scrollbars="none"
            ></ListView>
</LinearLayout>