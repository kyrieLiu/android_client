<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bg"
    tools:context=".activity.main.LoginActivity">

    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/login_logo_icon"
        android:layout_marginTop="40dp">
    </ImageView>
    <LinearLayout
        android:id="@+id/ll_login_et"
        android:layout_below="@id/iv_login_logo"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/login_et_bg">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/login_et_username_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/login_et_line"/>
        <com.chinasoft.ctams.view.ClearableEditTextWithIcon
            android:id="@+id/et_user_name_login"
            android:layout_width="match_parent"
            android:hint="请输入用户名"
            android:drawablePadding="15dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textColor="@color/white"
            android:background="@null"
            android:textColorHint="@color/white"
            android:singleLine="true"
            android:text="a"
            android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@mipmap/login_et_bg">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/login_et_password_icon"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/login_et_line"/>
            <com.chinasoft.ctams.view.ClearableEditTextWithIcon
                android:id="@+id/et_user_pwd_login"
                android:layout_width="match_parent"
                android:hint="请输入密码"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@null"
                android:textColorHint="@color/white"
                android:singleLine="true"
                android:textColor="@color/white"
                android:inputType="textPassword"
                android:drawablePadding="15dp"
                android:text="a"
                android:layout_height="50dp" />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/bt_to_login"
        android:layout_below="@id/ll_login_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ll_login_et"
        android:layout_alignRight="@id/ll_login_et"
        android:background="@color/white"
        android:text="登  陆"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>
</RelativeLayout>
