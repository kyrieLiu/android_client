<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/tv_item_taskMessage_thingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="@color/mainColorBlue"
            />
        <TextView
            android:id="@+id/tv_item_taskMessage_thingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-03-15"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_item_taskMessage_thingName"
            />
        <TextView
            android:id="@+id/tv_item_taskMessage_thingIntroduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_taskMessage_thingName"
            android:text="标题"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:textSize="16sp"
            />
    </RelativeLayout>

</LinearLayout>